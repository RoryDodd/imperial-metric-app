<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:top="4dp" android:right="1dp" android:left="4dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#171717"/> <!-- Shadow color (adjust the color and alpha) -->
            <corners android:radius="10dp"/> <!-- Adjust the radius as needed to match your button -->
        </shape>
    </item>

    <!-- Main button layer -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E67C00"/>
            <stroke
                android:color="@color/black"
                android:width="1dp"/>
            <corners android:radius="10dp"/> <!-- Adjust the radius as needed to match your button -->
        </shape>
    </item>


</layer-list>


